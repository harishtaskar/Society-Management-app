<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background5"
    tools:context=".CommitteeM_HomePage">


    <RelativeLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation"
        android:visibility="gone"
        >

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/toolbar1"
            android:gravity="center"
            android:elevation="4dp"
            android:paddingLeft="20dp"
            android:background="#99CDF6"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/profile_btnback"
                android:layout_width="50dp"
                android:background="#99CDF6"
                android:layout_height="56dp"
                android:padding="@dimen/_8sdp"
                android:layout_gravity="left"
                android:src="@drawable/baseline_arrow_back_24"/>
        </Toolbar>

        <LinearLayout
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_220sdp"
                app:cardElevation="@dimen/_5sdp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/committee_profile_society_name"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Society Name"
                        android:textColor="@color/teal_700"
                        android:gravity="left"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_20sdp"
                        >

                    </TextView>

                    <TextView
                        android:id="@+id/committee_profile_society_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="208 Mahadev Nagar 3 Dindoli Udhna Surat"
                        android:gravity="left"
                        android:textColor="#515151"
                        android:textSize="@dimen/_14sdp"
                        >

                    </TextView>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/committee_profile_img"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:src="@drawable/baseline_perm_identity_24"
                            >

                        </ImageView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/committee_profile_member_name"
                                android:layout_width="match_parent"
                                android:gravity="left"
                                android:textColor="@color/black"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_14sdp"
                                android:layout_height="wrap_content"
                                android:text="committee Member Name">


                            </TextView>

                            <TextView
                                android:id="@+id/committee_profile_member_email"
                                android:layout_width="match_parent"
                                android:gravity="left"
                                android:textSize="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_height="wrap_content"
                                android:text="Harishtaskar420@gmail.com">


                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/divider"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_width="409dp"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="220dp" />


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_15sdp"
                        >

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:layout_gravity="left"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:text="Edit your community profile"
                            />


                        <Button
                            android:id="@+id/committee_profile_edit_button"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:textSize="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:gravity="right"
                            android:background="@drawable/custom_button"
                            android:text="Edit profile"/>



                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/committee_profile_add_flat"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:padding="@dimen/_10sdp"

                        android:gravity="left"
                        android:text="Add falt/vill">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/committee_profile_visiror_notification"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:padding="@dimen/_10sdp"
                        android:gravity="left"
                        android:text="visitor notification">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView

                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/committee_profile_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:padding="@dimen/_10sdp"
                        android:gravity="left"
                        android:text="Tell a friend about Newgensociety">
                    </TextView>

                    <View
                        android:id="@+id/divider2"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="409dp"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="220dp" />



                    <TextView
                        android:id="@+id/committee_profile_support_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:padding="@dimen/_10sdp"
                        android:gravity="left"
                        android:text="Support and feedback ">
                    </TextView>

                    <View
                        android:id="@+id/divider3"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="409dp"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="220dp" />

                    <TextView
                        android:id="@+id/committee_profile_logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:padding="@dimen/_10sdp"
                        android:gravity="left"
                        android:text="Logout ">

                    </TextView>



                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/committee_profile_terms_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#2196F3"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Terms or conditions | Privacy Policy">

            </TextView>

            <TextView
                android:id="@+id/committee_profile_version"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="version 1.0.0">

            </TextView>




        </LinearLayout>



    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation"
        android:visibility="visible">
        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/toolbar2"
            android:elevation="4dp"
            android:paddingEnd="@dimen/_5sdp"
            android:background="#99CDF6"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:titleTextColor="@color/black"
            >
            <ImageView
                android:id="@+id/home_btnback"
                android:layout_width="50dp"
                android:background="#99CDF6"
                android:layout_height="56dp"
                android:padding="@dimen/_8sdp"
                android:layout_gravity="left"
                android:src="@drawable/baseline_arrow_back_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/home_btnprofile"
                android:layout_width="50dp"
                android:background="#A4D4FA"
                android:layout_height="56dp"
                android:padding="@dimen/_8sdp"
                android:layout_gravity="right"
                android:src="@drawable/baseline_perm_identity_24"/>

        </Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/add1"
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:backgroundTint="#DEFBBD"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:id="@+id/Due_maintenance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/commitee_dua_maintainance_img"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:src="@drawable/maintenance" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="#DEFBBD"
                            android:padding="5dp"

                            android:text="Maintenance"
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/add2"
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:backgroundTint="#99E4ED"
                    android:layout_margin="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="92dp"
                            android:layout_height="96dp"
                            android:src="@drawable/noticeboard" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:text="Notice"
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="25dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/delete"
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#F1B2FB"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:src="@drawable/request" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:text="Requests"
                            android:textColor="@color/black"

                            android:textStyle="bold" />


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/update"
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:backgroundTint="#B4C0FF"
                    android:layout_margin="20dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:src="@drawable/meeting" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:text="Society meetings"
                            android:textColor="@color/black"

                            android:textStyle="bold" />


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>


        </LinearLayout>


        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_centerInParent="true"-->
        <!--            android:textSize="22sp"-->
        <!--            android:text="Home"/>-->

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/notice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation"
        android:visibility="gone"
        >
        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/toolbar1"
            android:gravity="center"
            android:elevation="4dp"
            android:paddingLeft="20dp"
            android:background="#99CDF6"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notices"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/Notices_btnback"
                android:layout_width="50dp"
                android:background="#99CDF6"
                android:layout_height="56dp"
                android:padding="@dimen/_8sdp"
                android:layout_gravity="left"
                android:src="@drawable/baseline_arrow_back_24"/>
        </Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Committee_Notice_RecycleView"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_45sdp"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_centerInParent="true"-->
        <!--            android:textSize="22sp"-->
        <!--            android:text="Notice"/>-->

    </RelativeLayout>




    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mbn_circleColor="#2196F3"
        app:mbn_backgroundBottomColor="#99CDF6"
        app:mbn_countBackgroundColor="#99CDF6"
        app:mbn_countTextColor="#ffffff"
        app:mbn_defaultIconColor="#000000"
        app:mbn_rippleColor="#2f424242"
        app:mbn_selectedIconColor="#000000"
        app:mbn_shadowColor="#1f212121"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>