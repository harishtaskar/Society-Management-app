<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommitteeM_showHall">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <Toolbar
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:id="@+id/toolbar"
                android:elevation="4dp"
                android:paddingStart="20dp"
                android:background="#BEDFFA"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                tools:ignore="RtlSymmetry">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/society_hall"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:textColor="@color/black">

                </TextView>

                <TextView
                    android:id="@+id/Committee_Hall_Request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Request"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:layout_gravity="right"
                    android:textColor="#0022E1"
                    tools:ignore="RtlHardcoded">

                </TextView>

                <ImageView
                    android:id="@+id/Committee_Hall_Add"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/baseline_add_24"
                    android:layout_gravity="right"
                    android:layout_marginEnd="@dimen/_10sdp"
                    tools:ignore="ContentDescription,RtlHardcoded">

                </ImageView>

            </Toolbar>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Committee_Hall_RecycleView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="1dp"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>