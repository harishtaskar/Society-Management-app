<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/backgound2"
    tools:context=".MainActivity">



    <androidx.cardview.widget.CardView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edittext">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_gravity="center_horizontal"
                android:padding="24dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registration"
                    android:id="@+id/loginText"
                    android:textSize="36sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/orange"
                    android:gravity="center_horizontal" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/Committee_Registration_editT_Syname"
                    android:background="@drawable/custom_edittext"
                    android:drawablePadding="8dp"
                    android:textColorHint="#808080"
                    android:hint="Society name"
                    android:paddingStart="20dp"
                    android:padding="8dp"
                    android:inputType="text"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/cardview_dark_background"
                    android:layout_marginTop="40dp"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:text="Address"
                    android:textSize="15dp"
                    android:textColor="@color/orange"
                    android:layout_height="wrap_content">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/Committee_Registration_editT_area"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:background="@drawable/custom_edittext"
                        android:drawablePadding="8dp"
                        android:hint="Area"
                        android:inputType="text"
                        android:padding="8dp"
                        android:paddingStart="20dp"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textColorHint="#808080" />

                    <EditText
                        android:id="@+id/Committee_Registration_editT_location"
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:background="@drawable/custom_edittext"
                        android:drawablePadding="8dp"
                        android:hint="location"
                        android:inputType="text"
                        android:padding="8dp"
                        android:layout_marginLeft="50dp"
                        android:paddingStart="20dp"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textColorHint="#808080" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/Committee_Registration_editT_pincode"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:background="@drawable/custom_edittext"
                        android:drawablePadding="8dp"
                        android:hint="Pincode"
                        android:inputType="text"
                        android:padding="8dp"
                        android:paddingStart="20dp"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textColorHint="#808080" />

                    <EditText
                        android:id="@+id/Committee_Registration_editT_state"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:background="@drawable/custom_edittext"
                        android:drawablePadding="8dp"
                        android:hint="state"
                        android:inputType="text"
                        android:padding="8dp"
                        android:layout_marginLeft="40dp"
                        android:paddingStart="20dp"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textColorHint="#808080" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/Committee_Registration_editT_city"
                        android:layout_width="141dp"
                        android:layout_height="50dp"
                        android:background="@drawable/custom_edittext"
                        android:drawablePadding="8dp"
                        android:hint="City"
                        android:inputType="text"
                        android:padding="8dp"
                        android:paddingStart="20dp"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textColorHint="#808080" />

                    <EditText
                        android:id="@+id/Committee_Registration_editT_country"
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/custom_edittext"
                        android:drawablePadding="8dp"
                        android:hint="Country"
                        android:inputType="text"
                        android:padding="8dp"
                        android:paddingStart="20dp"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textColorHint="#808080" />


                </LinearLayout>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:text="Persnol Info"
                    android:textSize="15dp"
                    android:textColor="@color/orange"
                    android:layout_height="wrap_content">

                </TextView>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/Committee_Registration_editT_CMname"
                        android:background="@drawable/custom_edittext"
                        android:drawablePadding="8dp"
                        android:textColorHint="#808080"
                        android:hint="Committee member name"
                        android:paddingStart="20dp"
                        android:padding="8dp"
                        android:inputType="text"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:layout_marginTop="10dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/Committee_Registration_editT_CMemail"
                        android:background="@drawable/custom_edittext"
                        android:drawablePadding="8dp"
                        android:textColorHint="#808080"
                        android:hint="Email"
                        android:paddingStart="20dp"
                        android:padding="8dp"
                        android:inputType="text"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:layout_marginTop="10dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/Committee_Registration_editT_password"
                        android:background="@drawable/custom_edittext"
                        android:drawablePadding="8dp"
                        android:textColorHint="#808080"
                        android:hint="Password"
                        android:paddingStart="20dp"
                        android:padding="8dp"
                        android:inputType="text"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:layout_marginTop="10dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/Committee_Registration_editT_confirmpass"
                        android:background="@drawable/custom_edittext"
                        android:drawablePadding="8dp"
                        android:textColorHint="#808080"
                        android:hint="Confirm password"
                        android:paddingStart="20dp"
                        android:padding="8dp"
                        android:inputType="text"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:layout_marginTop="10dp"/>

                    <CheckBox
                        android:layout_marginTop="20dp"
                        android:layout_width="150dp"
                        android:text="Terms condition"
                        android:layout_height="50dp">

                    </CheckBox>

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/Progressbar"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/btn_RegCommitteeMember"
                    android:text="Register"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:background="@drawable/custom_button2"
                    android:layout_marginTop="30dp"
                    app:cornerRadius = "20dp"/>

            </LinearLayout>

        </ScrollView>



    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Alrady have account? Login Now"
        android:textSize="14sp"
        android:textAlignment="center"
        android:id="@+id/loginText"
        android:textColor="@color/blue"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal" />

</LinearLayout>