<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background5"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:layout_marginTop="10dp"
        android:id="@+id/loginText"
        android:textSize="36sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:gravity="center_horizontal" />



<!--    <androidx.cardview.widget.CardView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="650dp"-->
<!--        android:layout_margin="10dp"-->
<!--        app:cardCornerRadius="20dp"-->
<!--        app:cardElevation="20dp"-->
<!--        android:layout_marginTop="60dp"-->
<!--        android:background="@drawable/custom_edittext">-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_gravity="center_horizontal"
                android:padding="17dp">



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:boxBackgroundMode="outline"
                    android:layout_marginTop="20dp"
                    android:hint="Society name"
                    android:textColorHint="#808080"
                    app:boxBackgroundColor="@color/white"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxStrokeColor="@color/blue"
                    app:hintTextColor="@color/blue">


                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/Committee_Reg_editT_Sname"
                        android:drawablePadding="8dp"
                        android:drawableLeft="@drawable/ic_baseline_home_work_24"
                        android:paddingStart="10dp"
                        android:padding="8dp"
                        android:inputType="text"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:layout_marginTop="40dp"
                        android:paddingLeft="10dp" />
                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:text="@string/address"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:layout_height="wrap_content">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="170dp"
                        android:layout_height="60dp"
                        app:boxBackgroundMode="outline"
                        android:layout_gravity="top"
                        android:hint="Area"
                        android:textColorHint="#808080"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/blue"
                        app:hintTextColor="@color/blue">


                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="170dp"
                            android:layout_height="50dp"
                            android:id="@+id/Committee_Reg_editT_Area"
                            android:drawablePadding="8dp"
                            android:paddingStart="10dp"
                            android:padding="8dp"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:layout_marginTop="40dp"
                            android:paddingLeft="10dp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="170dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="10dp"
                        app:boxBackgroundMode="outline"
                        android:layout_gravity="top"
                        android:hint="Location"
                        android:textColorHint="#808080"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/blue"
                        app:hintTextColor="@color/blue"
                        android:layout_marginLeft="10dp">


                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="170dp"
                            android:layout_height="50dp"
                            android:id="@+id/Committee_Reg_editT_Location"
                            android:drawablePadding="8dp"
                            android:paddingStart="10dp"
                            android:padding="8dp"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:layout_marginTop="40dp"
                            android:paddingLeft="10dp" />
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Committee_Registration_Textview_state"
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:paddingStart="10dp"
                        android:text="@string/state"
                        android:layout_gravity="top"
                        android:textColor="@color/blue"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textColorHint="#808080"
                        android:paddingLeft="10dp" />







                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:background="@drawable/custom_edittext2"
                        android:id="@+id/Committee_Reg_spinner_state"
                        android:paddingLeft="6dp" />

                </LinearLayout>
                <TextView
                    android:id="@+id/Committee_Registration_Textview_city"
                    android:layout_width="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="20dp"
                    android:text="@string/city"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="top"
                    android:textColor="@color/blue"
                    android:textColorHighlight="@color/cardview_dark_background"
                    android:textColorHint="#808080"
                    android:layout_marginLeft="130dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:id="@+id/Committee_Reg_spinner_city"
                    android:background="@drawable/custom_edittext2"
                    android:layout_marginLeft="0dp"
                    android:paddingLeft="10dp"/>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="170dp"
                        android:layout_height="60dp"
                        app:boxBackgroundMode="outline"
                        android:layout_gravity="top"
                        android:hint="Pincode"
                        android:textColorHint="#808080"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/blue"
                        app:hintTextColor="@color/blue">


                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:id="@+id/Committee_Reg_editT_Pincode"
                            android:drawablePadding="8dp"
                            android:paddingStart="10dp"
                            android:padding="8dp"
                            android:inputType="numberDecimal"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:layout_marginTop="40dp"
                            android:paddingLeft="10dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <EditText
                        android:id="@+id/Committee_Registration_editT_country"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="0dp"
                        android:background="@drawable/custom_edittext2"
                        android:drawablePadding="8dp"
                        android:hint="Country"
                        android:inputType="text"
                        android:text="India"
                        android:padding="8dp"
                        android:paddingStart="20dp"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textColorHint="#808080"
                        android:paddingLeft="20dp" />


                </LinearLayout>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:text="Persnol Info"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:layout_height="wrap_content">

                </TextView>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        app:boxBackgroundMode="outline"
                        android:layout_gravity="top"
                        android:hint="Committee Member name"
                        android:textColorHint="#808080"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/blue"
                        app:hintTextColor="@color/blue">


                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:id="@+id/Committee_Reg_editT_CMname"
                            android:drawablePadding="8dp"
                            android:paddingStart="10dp"
                            android:padding="10dp"
                            android:drawableLeft="@drawable/ic_baseline_person_24"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:layout_marginTop="40dp"
                            android:paddingLeft="10dp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:boxBackgroundMode="outline"
                        android:layout_marginTop="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        android:hint="Contact"
                        android:textColorHint="#808080"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/blue"
                        app:hintTextColor="@color/blue">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:id="@+id/Committee_Reg_editT_Contact"
                            android:drawablePadding="8dp"
                            android:paddingStart="10dp"
                            android:padding="10dp"
                            android:drawableLeft="@drawable/baseline_phone_android_24"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:layout_marginTop="40dp"
                            android:paddingLeft="10dp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:boxBackgroundMode="outline"
                        android:layout_marginTop="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        android:hint="Email"
                        android:textColorHint="#808080"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/blue"
                        app:hintTextColor="@color/blue">


                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:id="@+id/Committee_Reg_editT_Email"
                            android:drawablePadding="8dp"
                            android:textColorHint="#808080"
                            android:drawableLeft="@drawable/ic_baseline_email_24"
                            android:paddingStart="10dp"
                            android:inputType="textEmailAddress"
                            android:padding="8dp"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:layout_marginTop="15dp"
                            android:paddingLeft="10dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:boxBackgroundMode="outline"
                        android:layout_marginTop="15dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        android:hint="Password"
                        android:textColorHint="#808080"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/blue"
                        app:hintTextColor="@color/blue">


                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:id="@+id/Committee_Reg_editT_Pass"
                            android:drawablePadding="8dp"
                            android:drawableLeft="@drawable/ic_baseline_lock_24"
                            android:paddingStart="10dp"
                            android:textColorHint="#808080"
                            android:padding="8dp"
                            android:inputType="textPassword"
                            android:filterTouchesWhenObscured="true"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:layout_marginTop="20dp"
                            android:paddingLeft="10dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:boxBackgroundMode="outline"
                        android:layout_marginTop="15dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        android:hint="Confirm Password"
                        android:textColorHint="#808080"
                        app:boxStrokeColor="@color/blue"
                        app:boxBackgroundColor="@color/white"
                        app:hintTextColor="@color/blue">


                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:id="@+id/Committee_Reg_editT_conPass"
                            android:drawablePadding="8dp"
                            android:drawableLeft="@drawable/ic_baseline_lock_24"
                            android:paddingStart="10dp"
                            android:textColorHint="#808080"
                            android:padding="8dp"
                            android:inputType="textPassword"
                            android:filterTouchesWhenObscured="true"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:layout_marginTop="20dp"
                            android:paddingLeft="10dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/Progressbar"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/btn_RegCommitteeMember"
                    android:text="Register"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:background="@drawable/custom_button2"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    app:cornerRadius = "20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Alrady have account? Login Now"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:id="@+id/RegloginText"
                    android:textColor="@color/blue"
                    android:layout_marginBottom="40dp"
                    android:gravity="center_horizontal" />

            </LinearLayout>

<!--    </androidx.cardview.widget.CardView>-->

        </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">


    </LinearLayout>

</LinearLayout>