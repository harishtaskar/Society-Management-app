<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iconmain"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_130sdp"
            >
        </ImageView>


        <androidx.cardview.widget.CardView
            android:id="@+id/btn_asComitteeMember"
            android:layout_marginTop="@dimen/_140sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            app:cardBackgroundColor="#EEFFE5"
            android:layout_marginRight="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_5sdp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/commtee"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    >
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Committee Member"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/black"

                    >
                </TextView>



            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_asSocietyMember"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            app:cardBackgroundColor="#E5F9FF"
            android:layout_marginRight="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_5sdp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/society"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    >
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Society Member"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/black"

                    >
                </TextView>



            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/committee_profile_terms_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#2196F3"
            android:layout_marginTop="@dimen/_25sdp"
            android:text="Terms &amp; conditions | Privacy Policy">

        </TextView>

        <TextView
            android:id="@+id/committee_profile_version"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="version 1.0.0">

        </TextView>
    </LinearLayout>
</LinearLayout>