<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SocietyM_HallShow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/toolbar"
            android:gravity="center"
            android:elevation="4dp"
            android:paddingStart="10dp"
            android:background="#BEDFFA"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amenities"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/Btn_Amenities_Back"
                android:layout_width="30dp"
                android:background="#BEDFFA"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:src="@drawable/baseline_arrow_back_24"
                tools:ignore="ContentDescription" />

        </Toolbar>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/Society_Hall_Requests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Your Requests"
            android:textAlignment="textEnd"
            android:textSize="@dimen/_19sdp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:paddingRight="@dimen/_2sdp"
            app:drawableRightCompat="@drawable/baseline_chevron_right_24"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_5sdp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Society_Hall_RecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"/>

    </LinearLayout>

</LinearLayout>