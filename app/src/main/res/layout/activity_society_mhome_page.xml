<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background5"
    tools:context=".SocietyM_HomePage">


    <RelativeLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation"
        android:visibility="gone">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Stoolbar1"
            android:gravity="center"
            android:elevation="4dp"
            android:paddingLeft="20dp"
            android:background="#BEDFFA"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

        </Toolbar>

        <LinearLayout
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_5sdp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/SocietyM_profile_society_name"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Society Name"
                        android:textColor="@color/teal_700"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_15sdp"
                        >

                    </TextView>

                    <TextView
                        android:id="@+id/SocietyM_profile_society_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="208 Mahadev Nagar 3 Dindoli Udhna Surat"
                        android:gravity="left"
                        android:textColor="#515151"
                        android:textSize="@dimen/_12sdp"
                        >

                    </TextView>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/SocietyM_profile_img"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/circle_image_view">

                        </ImageView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/SocietyM_profile_member_name"
                                android:layout_width="match_parent"
                                android:gravity="left"
                                android:textColor="@color/black"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:text="committee Member Name">

                            </TextView>

                            <TextView
                                android:id="@+id/SocietyM_profile_member_email"
                                android:layout_width="match_parent"
                                android:gravity="left"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_height="wrap_content">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/divider"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_width="409dp"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="220dp" />


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_15sdp"
                        >

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_gravity="left"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:text="Edit your profile"
                            />


                        <Button
                            android:id="@+id/Society_profile_edit_button"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:textSize="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_55sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_gravity="right"
                            android:background="@drawable/custom_button"
                            android:text="Edit profile"/>



                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/SocietyM_profile_add_flat"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black"
                        android:padding="@dimen/_10sdp"
                        android:gravity="left"
                        android:text="Add flat/villa">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Society_profile_help"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:padding="@dimen/_10sdp"
                        android:gravity="left"
                        android:text="helps">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView

                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Society_profile_share"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:padding="@dimen/_10sdp"
                        android:gravity="left"
                        android:text="Tell a friend about NewGenSociety">
                    </TextView>

                    <View
                        android:id="@+id/divider2"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="409dp"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="220dp" />



                    <TextView
                        android:id="@+id/Society_profile_support_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:padding="@dimen/_10sdp"
                        android:gravity="left"
                        android:text="Support and feedback ">
                    </TextView>

                    <View
                        android:id="@+id/divider3"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="409dp"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="220dp" />

                    <TextView
                        android:id="@+id/SocietyM_profile_logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:padding="@dimen/_10sdp"
                        android:gravity="left"
                        android:text="Logout ">

                    </TextView>




                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/Society_profile_terms_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#2196F3"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Terms or conditions | Privacy Policy">

            </TextView>

            <TextView
                android:id="@+id/SocietyM_profile_version"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="version 1.0.0">

            </TextView>

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation"
        android:visibility="visible">
        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/toolbar2"
            android:elevation="4dp"
            android:paddingEnd="@dimen/_5sdp"
            android:background="#BEDFFA"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:titleTextColor="@color/black"
            >

            <TextView
                android:id="@+id/Society_Home_sm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_gravity="left"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/home_btnprofile"
                android:layout_width="50dp"
                android:background="#BEDFFA"
                android:layout_height="56dp"
                android:padding="@dimen/_8sdp"
                android:layout_gravity="right"
                android:src="@drawable/baseline_perm_identity_24"/>

        </Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:padding="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/Society_Maintenance"
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:backgroundTint="#E3FACA"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:id="@+id/Due_maintenance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/society_dua_maintenance_img"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/house" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#DEFBBD"
                            android:padding="5dp"
                            android:text="Maintenance"
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/Society_Notice"
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:backgroundTint="#D0C0FB"
                    android:layout_margin="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="92dp"
                            android:layout_height="96dp"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/notice" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Notice"
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/Society_Help"
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:backgroundTint="#c0c9fb"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/help" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Help"
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/Society_Meeting"
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:backgroundTint="#FFD9CF"
                    android:layout_margin="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/meetings" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Society meeting"
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/Society_Complain"
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:backgroundTint="#FFF7CF"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/complain" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Complain"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/Society_AddFlat"
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:backgroundTint="#BEDFFA"
                    android:layout_margin="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/addflat" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Add Flat"
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>


        </LinearLayout>


        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_centerInParent="true"-->
        <!--            android:textSize="22sp"-->
        <!--            android:text="Home"/>-->

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/notice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation"
        android:visibility="gone"
        >
        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Stoolbar3"
            android:gravity="center"
            android:elevation="4dp"
            android:paddingLeft="20dp"
            android:background="#BEDFFA"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notice"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

        </Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Society_MainNotice_RecycleView"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_45sdp"
            android:layout_height="match_parent"
            />
        </LinearLayout>
        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_centerInParent="true"-->
        <!--            android:textSize="22sp"-->
        <!--            android:text="Notice"/>-->

    </RelativeLayout>

    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mbn_circleColor="@color/white"
        app:mbn_backgroundBottomColor="#BEDFFA"
        app:mbn_countBackgroundColor="#BEDFFA"
        app:mbn_countTextColor="#ffffff"
        app:mbn_defaultIconColor="#000000"
        app:mbn_rippleColor="#2f424242"
        app:mbn_selectedIconColor="#000000"
        app:mbn_shadowColor="#1f212121"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>