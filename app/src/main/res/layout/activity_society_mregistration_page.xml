    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginTop="@dimen/_10sdp"-->
    <!--        android:gravity="center"-->
    <!--        android:text="Alredy Login"-->
    <!--        android:textSize="@dimen/_12sdp">-->


    <!--    </TextView>-->


</LinearLayout>